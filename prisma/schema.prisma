generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user{
  id String @id @default(uuid())
  name String
  email String
  logo String
  password String
  isActive Boolean @default(true)
  admHash String @ignore
  payment payment_info?
  created_at DateTime
  updated_at DateTime
  musics music_info[]
  playlists playlist[]
}
model payment_info{
  id String @id @default(uuid())
  name String
  card_number BigInt
  due_date DateTime
  card_cv Int
  user user @relation(fields: [userId],references: [id])
  userId String @unique
}
model music_info{
  id String @id @default(uuid())
  link_music String
  link_logo String @default("https://images.fineartamerica.com/images/artworkimages/mediumlarge/1/music-icon-mohammed-jabir-ap.jpg")
  user_id String
  music_id String
  users user @relation(fields: [user_id],references: [id])
  musics music @relation(fields: [music_id],references: [id])

}
model music{
  id String @id @default(uuid())
  name String
  artist String
  genre String
  description String
  duration Float
  created_at DateTime
  updated_at DateTime 
  users music_info[]
  playlist_id String
  playlist playlist @relation(fields: [playlist_id],references: [id])
}
model playlist{
  id String @id @default(uuid())
  name String
  music_count Int
  created_at DateTime
  updated_at DateTime
  musics music[]
  user_id String
  users user @relation(fields: [user_id],references: [id])
}

